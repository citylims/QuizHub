<div class="home">
  <h1> Welcome to Quizdown </h1>
  <section>
    <h2>Community Quizzes</h2>
    <div class="quiz-list">
      <% @customs.each do |quiz| %>
        <ul>
          <li>Quiz Name: <%= quiz.name %></li>
          <li>Category: <%= quiz.category %></li>
          <li>Created By: <%= quiz.author %></li>
          <li><%= link_to "Start Quiz", custom_path(quiz) %></li>
        </ul>
      <% end %>
    </div>
  </section>
  <section>
  <div class="loading-indicator">
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 130 130" overflow="visible" enable-background="new 0 0 130 130" id="progress">
        <circle fill="none" stroke-width="4" stroke-miterlimit="10" cx="65" cy="65" r="60"></circle>
        <circle class="meter" fill="none" stroke-width="4" stroke-miterlimit="10" cx="65" cy="65" r="60"></circle>
        </svg>
    </div>
  <p><b class="percentage"></b></p>

  <div class="interface">
    <div id="state"></div>
    <div class="controls">
      <input type="text" class="guess"></input>
      <div class="control-buttons">
      <button class="go">Start Quiz</button>
      <button class="guess-btn">Guess</button>
    </div>
  </div>
</section>
  <section>
    <h2>Trivia Quizzes</h2>
    <div class="quiz-list">
      <% @trivia.each do |quiz| %>
        <ul>
          <li><%= quiz.category %></li>
          <li><%= link_to "Start Quiz", quiz_path(quiz) %></li>
        </ul>
      <% end %>
    </div>
  </section>
</div><!--page-->
